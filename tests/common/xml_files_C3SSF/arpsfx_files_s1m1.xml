          <field field_ref="orog" name="orog" >
              <variable name="standard_name" type="string" > surface_altitude </variable>
              <variable name="long_name" type="string" > Surface Altitude </variable>
              <variable name="coordinates" type="string" > lat lon </variable>
              <variable name="grid_mapping" type="string" > hcrs </variable>
              <variable name="units" type="string" > m </variable>
