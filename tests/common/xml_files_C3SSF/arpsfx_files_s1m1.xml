              <variable name="standard_name" type="string" > land_area_fraction </variable>
              <variable name="long_name" type="string" > Land Area Fraction </variable>
              <variable name="coordinates" type="string" > lat lon </variable>
              <variable name="grid_mapping" type="string" > hcrs </variable>
              <variable name="units" type="string" > 1 </variable>
              1-sftsf
